<h1>Listing Development Skills</h1>

<table>
  <thead>
    <tr>
      <th>Skill name</th>
      <th>Desired skill level</th>
      <th>Notes</th>
      <th>Completed</th>
      <th>Percent complete</th>
      <th>Current skill level</th>
      <th>Development plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @development_skills.each do |development_skill| %>
      <tr>
        <td><%= development_skill.skill.skill_name unless development_skill.skill.nil? %></td>
        <td><%= development_skill.development_skill_levels.find_by(is_current: false).skill_level.level unless development_skill.development_skill_levels.find_by(is_current: false).nil? %></td>
        <td><%= development_skill.notes %></td>
        <td><%= development_skill.completed %></td>
        <td><%= development_skill.percent_complete %></td>
        <td><%= development_skill.development_skill_levels.find_by(is_current: true).skill_level.level unless development_skill.development_skill_levels.find_by(is_current: true).nil? %></td>
        <td><%= development_skill.development_plan.plan_name %></td>
        <td><%= link_to 'Show', development_skill %></td>
        <td><%= link_to 'Edit', edit_development_skill_path(development_skill) %></td>
        <td><%= link_to 'Destroy', development_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

