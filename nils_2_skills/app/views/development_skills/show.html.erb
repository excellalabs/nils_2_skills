<p id="notice"><%= notice %></p>

<p>
  <strong>Skill name:</strong>
  <%= @development_skill.skill.skill_name unless @development_skill.skill.nil? %>
</p>

<p>
  <strong>Desired skill level:</strong>
  <%= @development_skill.development_skill_levels.find_by(is_current: false).skill_level.level unless @development_skill.development_skill_levels.find_by(is_current: false).nil? %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @development_skill.notes %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @development_skill.completed %>
</p>

<p>
  <strong>Percent complete:</strong>
  <%= @development_skill.percent_complete %>
</p>

<p>
  <strong>Current skill level:</strong>
  <%= @development_skill.development_skill_levels.find_by(is_current: true).skill_level.level unless @development_skill.development_skill_levels.find_by(is_current: true).nil? %>
</p>

<p>
  <strong>Development plan:</strong>
  <%= @development_skill.development_plan.plan_name %>
</p>

<%= link_to 'Edit', edit_development_skill_path(@development_skill, :development_plan_id => @development_skill.development_plan_id) %> |
<%= link_to("New Development Task", new_development_task_path(:development_skill_id => @development_skill.id)) %><br/>
<p>
  <strong>Development Tasks:</strong>
  <%= DevelopmentTask.all %>
</p>
<%= link_to 'Back to skills', development_skills_path %> |
<%= link_to 'Back to development plan', development_plan_path(@development_skill.development_plan_id) %>
