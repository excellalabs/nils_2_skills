<h1>New Development Task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	
    <%= form_for (@development_task) do |f| %>

      <%= f.label :task_name %>:
      <%= f.text_field :task_name, class: 'form-control' %><br/>

      <%= f.label :details %>:
      <%= f.text_area :details, class: 'form-control' %><br/>

      <%= f.label :start_date %>:
      <%= f.date_select :start_date, class: 'form-control' %><br/>

      <%= f.label :completion_date %>:
      <%= f.date_select :completion_date, class: 'form-control' %><br/>

      <%= f.label :completed %>:
      <%= f.check_box :completed %><br/>
    
      <%= f.submit "Save changes" %>
    <% end %>
  </div>
</div>
<br/><br/>
<%= link_to("Back to tasks", development_tasks_path) %>