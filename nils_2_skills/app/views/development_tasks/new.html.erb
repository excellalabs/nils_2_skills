<h1>New Development Task</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	
    <%= form_for (@development_task) do |f| %>

      <%= f.label :task_name %>:
      <%= f.text_field :task_name, class: 'form-control' %><br/>

      <%= f.label :details %>:
      <%= f.text_area :details, class: 'form-control' %><br/><br/>

      <%= f.label :completed %><br>
      <%= f.check_box :completed %>
    
      <%= f.submit "Create new development task" %>
    <% end %>
  </div>
</div>
<br/><br/>
<%= link_to("Back to Dashboard", :Dashboard) %>