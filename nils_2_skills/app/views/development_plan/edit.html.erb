<h1>Edit Development Plan</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	
    <%= form_for @development_plan do |f| %>

      <%= f.label :plan_name %>:
      <%= f.text_field :plan_name, class: 'form-control' %><br/>

      <%= f.label :description %>:
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.submit "Save changes" %>
    <% end %>
  </div>
</div>

<br/><br/>
<%= link_to("Back to Dashboard", :Dashboard) %>