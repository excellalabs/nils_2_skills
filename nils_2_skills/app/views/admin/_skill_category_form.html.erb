<div class="row">
  <div class="col-md-6 col-md-offset-3">  	
    <%= form_for @categories[:skill_category], url: @categories[:path] do |c| %>
      <%= c.hidden_field :id %>
      <%= c.label :category_name %>
      <%= c.text_field :category_name, class: 'form-control' %>

      <%= c.label :description %>
      <%= c.text_field :description, class: 'form-control' %>

      <%= c.submit "#{@categories[:submit_btn_text]}" %>
    <% end %>
  </div>
</div>

